<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/eleven"
    android:layout_marginLeft="@dimen/sixteen"
    app:cardCornerRadius="@dimen/five"
    android:layout_marginRight="@dimen/sixteen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="16">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="14"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#4D4D4D"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="end"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeStepGranularity="1sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/four"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:paddingLeft="@dimen/eight"
                android:gravity="left"
                android:text="SCI. DETL. SCALE"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:id="@+id/dailyscore"
                android:layout_gravity="center"
                android:paddingRight="@dimen/eight"
                android:gravity="end"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/four"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:text="AVG BIZ. / MTH."
                android:paddingLeft="@dimen/eight"
                android:gravity="left"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:id="@+id/monthlyscore"
                android:paddingRight="@dimen/eight"
                android:gravity="end"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/five"
        android:layout_marginBottom="@dimen/five">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:id="@+id/delete"
                android:layout_marginRight="@dimen/five"
                android:src="@drawable/ic_delete"/>
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/editentry"
                android:background="#00000000"
                android:layout_marginRight="@dimen/five"
                android:src="@drawable/ic_edit"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>