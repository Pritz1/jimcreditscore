<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/eleven"
    android:layout_marginLeft="@dimen/eleven"
    app:cardCornerRadius="@dimen/five"
    android:layout_marginRight="@dimen/eleven">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linlayout"
        android:background="@drawable/auborder"
        android:layout_margin="5dp"
        android:weightSum="20">
        <TextView
            android:id="@+id/drname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4D4D4D"
            android:layout_weight="16"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeStepGranularity="1sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="left"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:id="@+id/doentry"
            android:background="#00000000"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_edit"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:id="@+id/delete"
            android:layout_marginRight="@dimen/ten"
            android:src="@drawable/ic_delete"/>

    </LinearLayout>

</android.support.v7.widget.CardView>